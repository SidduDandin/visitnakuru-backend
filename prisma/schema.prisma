generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model tbl_admin {
  id        String   @id @default(uuid())
  fullname  String?
  username  String
  email     String   @unique
  password  String
  phoneNumber String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  status    Int?
  resetToken              String?
  resetTokenExpires       DateTime?
}

model tbl_contact {
  ContactId String @id @default(uuid())
  ContactName String
  ContactEmail String
  ContactPhoneNumber String
  ContactSubject String
  ContactMessage String
  ContactDate DateTime @default(now())
}


model tbl_cms {
  CmsId          String @id @default(uuid())
  CmsPageName    String @unique
  CmsText_en     String   // English (default)
  CmsText_es     String?  // Spanish
  CmsText_fr     String?  // French
  CmsText_de     String?  // German
  CmsText_zh     String?  // Chinese
}


model tbl_newslettersubscriber{
  NLSubID String @id @default(uuid())
  EmailAddress String @unique
  createdAt  DateTime @default(now())
}

model tbl_banner{
  BannerID    String   @id @default(uuid())
  BannerImage String 
  BannerTitle_en String? 
  BannerTitle_es String?
  BannerTitle_fr String?
  BannerTitle_de String?
  BannerTitle_zh String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model tbl_partner {
  PartnerID        Int       @id @default(autoincrement())
  BusinessName     String
  ContactPerson    String
  Email            String
  Phone            String
  Category         String
  Subcategory      String
  PhysicalAddress  String
  MapLink          String
  ShortDescription String
  OperatingHours   String
  FullDescription  String
  Status           String    @default("Pending")
  CreatedAt        DateTime  @default(now())

  Documents tbl_partner_documents[]
  Photos    tbl_partner_photos[]
  Videos    tbl_partner_videos[]
}

model tbl_partner_documents {
  DocumentID Int      @id @default(autoincrement())
  PartnerID  Int
  FilePath   String
  FileName   String
  CreatedAt  DateTime @default(now())
  tbl_partner tbl_partner @relation(fields: [PartnerID], references: [PartnerID], onDelete: Cascade)
}

model tbl_partner_photos {
  PhotoID   Int      @id @default(autoincrement())
  PartnerID Int
  FilePath  String
  FileName  String
  CreatedAt DateTime @default(now())
  tbl_partner tbl_partner @relation(fields: [PartnerID], references: [PartnerID], onDelete: Cascade)
}

model tbl_partner_videos {
  VideoID   Int      @id @default(autoincrement())
  PartnerID Int
  FilePath  String
  FileName  String
  CreatedAt DateTime @default(now())
  tbl_partner tbl_partner @relation(fields: [PartnerID], references: [PartnerID], onDelete: Cascade)
}



